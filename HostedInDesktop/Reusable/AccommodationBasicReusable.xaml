<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HostedInDesktop.Reusable.AccommodationBasicReusable">

    <StackLayout Orientation="Horizontal" Padding="10">
        <Label Text="{Binding BasicText}" VerticalOptions="Center"/>
        <Button Text="-" Command="{Binding DecreaseCommand}" CommandParameter="{Binding}" />
        <Label Text="{Binding Value}" VerticalOptions="Center"/>
        <Button Text="+" Command="{Binding IncreaseCommand}" CommandParameter="{Binding}" />
    </StackLayout>

</ContentView>
