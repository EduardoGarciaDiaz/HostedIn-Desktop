<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HostedInDesktop.Reusable.AccommodationServiceReusable">
    <Frame Padding="5" Margin="5" CornerRadius="10" HasShadow="True" BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}">
        <Button Text="{Binding ServiceName}"
           TextColor="Black"
           FontSize="20"
           VerticalOptions="Center"
           HorizontalOptions="Center" 
            BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}"/>
    </Frame>
</ContentView>
