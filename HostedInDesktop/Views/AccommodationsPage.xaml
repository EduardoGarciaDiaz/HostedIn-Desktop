<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:HostedInDesktop.viewmodels"
             x:Class="HostedInDesktop.Views.AccommodationsPage">

<ContentPage.BindingContext>
    <viewmodel:AccommodationsViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Accommodations}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10" ColumnSpacing="10" RowSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image Source="{Binding ImageUrl}" WidthRequest="100" HeightRequest="100" Grid.Column="0" />
                    <StackLayout Grid.Column="1">
                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18" />
                        <Label Text="{Binding Location}" FontSize="14" />
                    </StackLayout>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
